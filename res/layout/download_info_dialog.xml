<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:layout_gravity="center_vertical" android:id="@id/download_dialog_fl_tips" android:layout_width="fill_parent" android:layout_height="@dimen/download_dialog_tips_item_height">
        <com.ucturbo.ui.widget.auto.theme.ATTextView android:textSize="@dimen/download_dialog_tips_text_size" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@id/download_dialog_tv_tips" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/download_dialog_text_margin_left" android:layout_marginRight="@dimen/download_dialog_text_margin_right" android:text="@string/download_dialog_tips" android:singleLine="true" />
    </FrameLayout>
    <FrameLayout android:id="@id/download_dialog_fl_content_bg" android:layout_width="fill_parent" android:layout_height="@dimen/download_dialog_content_height">
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/download_dialog_item_margin_top">
            <ImageView android:id="@id/download_dialog_iv_icon" android:layout_width="@dimen/download_dialog_content_item_height" android:layout_height="@dimen/download_dialog_content_item_height" android:layout_marginLeft="@dimen/download_dialog_text_margin_left" android:scaleType="centerCrop" android:adjustViewBounds="true" />
            <LinearLayout android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/download_dialog_inner_margin_left" android:layout_marginRight="@dimen/download_dialog_text_margin_right">
                <com.ucturbo.ui.widget.auto.theme.ATTextView android:textSize="@dimen/download_dialog_content_title_text_size" android:ellipsize="middle" android:layout_gravity="center_vertical" android:id="@id/download_dialog_tv_content_title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:singleLine="true" />
                <com.ucturbo.ui.widget.auto.theme.ATTextView android:textSize="@dimen/download_dialog_content_content_text_size" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@id/download_dialog_tv_content_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/download_dialog_inner_margin_top" android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout android:layout_gravity="bottom" android:layout_width="fill_parent" android:layout_height="wrap_content">
